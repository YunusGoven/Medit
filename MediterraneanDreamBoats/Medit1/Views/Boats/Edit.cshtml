@model Medit1.Models.Boat

@{
    ViewData["Title"] = "Modifier bateau";
}

<h1>Modifier bateau</h1>

<h4>Bateau</h4>
<hr />
<div class="d-flex justify-content-center">
    <div >
        <div >
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BoatId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NbConvives" class="control-label"></label>
                    <input asp-for="NbConvives" class="form-control" />
                    <span asp-validation-for="NbConvives" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Modifier" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>