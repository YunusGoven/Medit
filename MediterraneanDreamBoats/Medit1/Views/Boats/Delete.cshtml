@model Medit1.Models.Boat

@{
    ViewData["Title"] = "Supprimer bateau";
}

<h1>Confirmation - Suppression</h1>

<h3>Etes-vous sûr de supprimer ce bateau ?</h3>
<div>
    <h4>Bateau</h4>
    <hr />
    <div class="container">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NbConvives)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NbConvives)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BoatId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
